pipeline {
     agent any
     stages {
        stage("Build") {
            steps {
                sh "sudo npm install"
                sh "sudo npm run build"
            }
        }
        stage("Deploy") {
            steps {
                sh "sudo rm -rf /var/www/html/react-app/"
                sh "sudo cp -r ${WORKSPACE}/react-app/ /var/www/html/react-app"
            }
        }
    }
}
