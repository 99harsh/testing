pipeline {
     agent any
     environment {
         CI = 'true'
         HOME = '.'
         npm_config_cache = 'npm-cache'
     }
     stages {
        stage("Build") {
            steps {
                sh "sudo npm install"
                sh "sudo npm run build"
            }
        }
        stage("Deploy") {
            steps {
                sh "sudo rm -rf /var/www/html/react-app/"
                sh "sudo cp -r ${WORKSPACE}/react-app/ /var/www/html/react-app"
            }
        }
    }
}
